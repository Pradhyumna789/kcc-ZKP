{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node", "mocha"]
  },
  "include": ["contracts/**/*.sol", "test/**/*.ts", "scripts/**/*.ts", "ignition/**/*.ts", "hardhat.config.ts"],
  "exclude": ["node_modules", "artifacts", "cache", "typechain-types"]
}
